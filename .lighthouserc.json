{
  "ci": {
    "collect": {
      "staticDistDir": ".next", 
      "url": ["http://localhost:3000/"]
    },
    "assert": {
      "assertions": {
        "first-contentful-paint": ["warn", {"maxValue": 2000}],
        "interactive": ["warn", {"maxValue": 5000}],
        "cumulative-layout-shift": ["warn", {"maxValue": 0.1}]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouse"
    }
  }
}

