generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Flow {
  id        String   @id @default(cuid())
  name      String
  version   Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  nodes     Node[]
  edges     Edge[]
  versions  FlowVersion[]
}

model Node {
  id        String   @id @default(cuid())
  flowId    String
  type      String
  x         Int
  y         Int
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  flow      Flow     @relation(fields: [flowId], references: [id], onDelete: Cascade)
  sourceEdges Edge[] @relation("SourceNodeEdges")
  targetEdges Edge[] @relation("TargetNodeEdges")
}

model Edge {
  id            String   @id @default(cuid())
  flowId        String
  sourceNodeId  String
  sourcePort    String
  targetNodeId  String
  targetPort    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  flow      Flow @relation(fields: [flowId], references: [id], onDelete: Cascade)
  source    Node @relation("SourceNodeEdges", fields: [sourceNodeId], references: [id], onDelete: Cascade)
  target    Node @relation("TargetNodeEdges", fields: [targetNodeId], references: [id], onDelete: Cascade)
}

model FlowVersion {
  id        String   @id @default(cuid())
  flowId    String
  version   Int
  author    String?
  snapshot  Json
  createdAt DateTime @default(now())

  flow      Flow     @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@unique([flowId, version])
}
