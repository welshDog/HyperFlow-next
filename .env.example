# Client-side env (public)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-side env (private)
DATABASE_URL=postgresql://user:pass@host:5432/dbname
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM="Your Name <you@example.com>"
ADMIN_NOTIFICATION_EMAIL=you@example.com
RENDER_API_KEY=your_render_api_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Optional third-party gateways
PINATA_GATEWAY_KEYS=your_pinata_gateway_keys_here
PINATA_JWT=your_pinata_jwt_here

# App config
HYPER_CONFIG_VERSION=1
HYPER_COMPAT_TARGET=hyperflow-editor@0.1.0
HYPER_ENABLE_POWERS=true
HYPER_ENABLE_VERSIONING=true
HYPER_ENABLE_MINIMAP=true
HYPER_ENABLE_TOASTS=true
HYPER_ENABLE_AUTH_GUARDS=true
HYPER_ENABLE_MONITORING=true
HYPER_MAX_CONCURRENCY=4
HYPER_PAGINATION_LIMIT=20
HYPER_VERSION_HISTORY_LIMIT=1000
HYPER_PERF_BUDGET_LCP_MS=2500
HYPER_PERF_BUDGET_CLS=0.1
HYPER_PERF_BUDGET_TTI_MS=5000
HYPER_SAFE_MODE=false
HYPER_AUTH_REQUIRED_FOR_RESTORE=true
HYPER_ROLLBACK_ON_FAILURE=true
HYPER_MAX_RESOURCE_USAGE_PERCENT=85
HYPER_LOG_LEVEL=info
HYPER_DEBUG_FEATURES=false
HYPER_MONITOR_INTERVAL_MS=10000
HYPER_METRICS_DESTINATION=console

